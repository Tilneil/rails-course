<body>
    <form action='/update' method="GET">
        <input type="hidden" name="id" value="<%= @contacts.id %>"> 
            
            <div class="body">
            <input type="text" name="first_name" placeholder="<%= @contacts.first_name %>">
            </div>
         
            <div class="body">
            <input type="text" name="last_name" value="<%= @contacts.last_name %>">
            </div>
            
            <div class="body">
            <input type="tel" name="phone_number" value="<%= @contacts.phone_number %>">
            </div>
            
            <div class="body">
            <input type="email" name="email" value="<%= @contacts.email %>">
            </div>
            
            <div class="body">
            <input type="text" name="address" value="<%= @contacts.address %>">
            </div>
            
            <div class="body">
            <input type="text" name="city" value="<%= @contacts.city %>">
            </div>
            
            <div class="body">
            <input type="text" name="state" value="<%= @contacts.state %>">
            </div>
            
            <div class="body">
            <input type="number" name="zip_code" value="<%= @contacts.zip_code%>">
            </div>
            
            <div class="body">
            <input type="submit" value="Submit">
            </div>
        </form>
        
    </body>
</html>