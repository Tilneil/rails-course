<% if @contacts.length == 0 %>
       <h1>Contact Not Found</h1>

        <p><b>Please click "Add New Contact" to add this contact to your app.</b></p>
        
        <div class="controls">
        <img src="https://image.flaticon.com/icons/svg/25/25694.svg" height=20px><a href="/contacts"> Return Home</a>
        </div>
        
        <div class="controls">
        <img src="http://simpleicon.com/wp-content/uploads/add-user.png" height=20px><a href="/contacts/new"> Add New Contact</a>
        </div>
            
        <div class="controls">
        <img src="http://cdn.onlinewebfonts.com/svg/download_458107.png" height=20px> <a href="/contacts/search"> Search Contacts </a>
        </div>
                  
 <% else %>
    <% @contacts.each do |contact| %>
    
        <div class="body">
            <h4><%= contact.first_name %> <%= contact.last_name %></h4>
            <p><%= contact.address %> <%= contact.city %> <%= contact.state %> <%= contact.zip_code %></p>
            <p><%= contact.phone_number %></p>
            <p><%= contact.email %></p>
            <a href="/contact/edit?id=<%= contact.id %>">Edit</a>
            <a href="/contact/destroy?id=<%= contact.id %>">Delete</a> <br><br><br>
         </div>
        
        <% end %>
        
        <div class="controls">
        <img src="https://image.flaticon.com/icons/svg/25/25694.svg" height=20px><a href="/contacts"> Return Home</a>
        </div>
        
        <div class="controls">
        <img src="http://simpleicon.com/wp-content/uploads/add-user.png" height=20px><a href="/contacts/new"> Add New Contact</a>
        </div>
            
        <div class="controls">
        <img src="http://cdn.onlinewebfonts.com/svg/download_458107.png" height=20px> <a href="/contacts/search"> Search Contacts </a>
        </div>
<% end %>
      